<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".Frutas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo4"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- GRID de 2 columnas -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Sandía -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:src="@drawable/sandia"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/nombre1" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:onClick="sandia"
                    android:text="@string/nombre1"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Mango -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:src="@drawable/mango"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/nombre2" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/yellow"
                    android:onClick="mango"
                    android:text="@string/nombre2"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Manzana -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:src="@drawable/manzana"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/nombre3" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:onClick="manzana"
                    android:backgroundTint="@color/orange"
                    android:text="@string/nombre3"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Limon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:src="@drawable/limmon"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/nombre3" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:onClick="limon"
                    android:backgroundTint="@color/orange"
                    android:text="@string/nombre4"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="8dp" />
            </LinearLayout>


        </GridLayout>
    </LinearLayout>
</ScrollView>
